    <script>
        // State management
        const userResponses = { 1: "", 2: "", 3: "", 4: "", 5: "", 6: "" };

        // Switch Tabs
        function switchTab(id) {
            // Hide all workspaces
            document.querySelectorAll('.workspace').forEach(el => el.classList.remove('active'));
            // Show selected
            document.getElementById(`prompt-${id}`).classList.add('active');
            
            // Update tabs UI
            document.querySelectorAll('.tab').forEach((tab, index) => {
                if(index + 1 === id) tab.classList.add('active');
                else tab.classList.remove('active');
            });
        }

        // Word Count Logic
        function updateWordCount(id) {
            const textarea = document.getElementById(`response-${id}`);
            const counter = document.getElementById(`counter-${id}`);
            const text = textarea.value.trim();
            const count = text === '' ? 0 : text.split(/\s+/).length;
            
            userResponses[id] = text;
            counter.textContent = `${count} words`;

            // Visual feedback for word count
            counter.classList.remove('good', 'short');
            if (count >= 150) {
                counter.classList.add('good');
            } else if (count > 0 && count < 100) {
                counter.classList.add('short');
            }
        }

        // Submit Logic
        function submitEssay(id) {
            const text = userResponses[id];
            if(!text) {
                alert("Please write your essay before submitting.");
                return;
            }

            // Populate Result View
            document.getElementById(`submitted-content-${id}`).textContent = text;
            document.getElementById(`edit-${id}`).value = text;
            
            // Show Result Section
            const resultSection = document.getElementById(`result-${id}`);
            resultSection.style.display = 'block';
            
            // Scroll to it
            resultSection.scrollIntoView({ behavior: 'smooth' });
        }

        // Init
        window.onload = function() {
            switchTab(1);
        };
    </script>
</body>
